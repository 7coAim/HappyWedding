<%= form_with(model: @twtext, local: true ,url: choose_new_or_edit ) do |form| %>

  <% if @twtext.errors.any? %>
    <div id="error_explanation">
      <h2><%= @twtext.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @twtext.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="twtext_content">
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>

  <%= form.submit %>
<% end %>
<%= link_to "つぶやき一覧にもどる", twtexts_path %>
