<div class="container">
  <div class="row">
    <div class="col-xs-3"></div>
    <div class="col-xs-6">

      <div class="page-header">
      	<h1>つぶやき一覧 <small>Tweets</small> </h1>
      </div>

      <%= link_to 'つぶやく', new_twtext_path, class: 'btn btn-default' %>
      <p><%= notice %></p>

      <div class="list-group">

        <% @twtexts.each do |twtext| %>
          <div class="list-group-item">
            <div class="media">

              <div class="media-left" style="font-size: 40px;">
                <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
              </div>
              <div class="media-body"><%= twtext.content %></div>
              <div class="row">
                <div class="col-xs-8"></div>
                <div class="col-xs-4">
                  <%= link_to '編集', edit_twtext_path(twtext.id), class: 'btn btn-default' %>
                  <%= link_to '削除', twtext_path(twtext.id), class: 'btn btn-danger', method: :delete ,data: { confirm: 'つぶやきを本当に削除しますか？' } %>
                </div>
              </div>
            </div>
          </div>

        <% end %>

      </div>

    </div>
    <div class="col-xs-3"></div>
  </div>
</div>
