<div class="row">
  <div class="col-md-8 col-md-offset-2">

    <div class="page-header">
      <h1>お祝いメッセージ<br>
        <small>List of Messages</small>
        <%= link_to 'メッセージを書く', "#", class: 'btn btn-default btn-lg pull-right hidden-xs col-sm-3', disabled: true, data: { confirm: '投稿機能は現在利用できません' } %>
      </h1>
    </div>

    <div class="visible-xs-block">
      <div class="row new_twtext_btn">
        <%= link_to 'メッセージを書く', "#", class: 'btn btn-default btn-lg col-xs-12', disabled: true, data: { confirm: '投稿機能は現在利用できません' } %>
      </div>
    </div>

    <% if flash[:notice] %>
      <div class="alert alert-success alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="閉じる">
          <span aria-hidden="true">×</span></button>
        <strong>お知らせ</strong>
        ：
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="list-group">

      <% @twtexts.each do |twtext| %>
        <div class="list-group-item">
          <div class="media">

            <div class="media-left">
              <%= image_tag '/tw-icon.png' %>
            </div>
            <div class="media-body tw_content">
              <%= twtext.content %>
            </div>
            <div class="pull-right">
              <%= link_to '編集', twtexts_path, class: 'btn btn-default', disabled: true ,data: { confirm: '編集機能は現在利用できません' } %>
              <%= link_to '削除', twtexts_path, class: 'btn btn-danger', disabled: true ,data: { confirm: '削除機能は現在利用できません' } %>

            </div>
          </div>
        </div>

      <% end %>

    </div>

  </div>
</div>
